<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <include layout="@layout/loading" />

    <LinearLayout
        android:id="@+id/list"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:visibility="gone" >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:background="@drawable/title_bg" >

            <TextView
                android:id="@+id/detail_main_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:singleLine="true"
                android:text=""
                android:textColor="#99CCFF"
                android:textSize="20sp" />
        </RelativeLayout>

        <ListView
            android:id="@+id/jingxuan_detail_listview"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_below="@+id/jingxuan_detail_main_txt"
            android:layout_weight="1"
            android:background="@color/bg_White"
            android:divider="@color/bg_Gray"
            android:dividerHeight="2dp"
            android:paddingLeft="5dp"
            android:paddingRight="5dp" >
        </ListView>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="55dp"
            android:background="@drawable/title_bg"
            android:orientation="horizontal" >

            <Button
                android:id="@+id/likeCount"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_weight="1"
                android:background="@null"
                android:drawableTop="@drawable/icon_like_red_32"
                android:text="@string/love_num"
                android:textColor="@color/bg_White" />

            <Button
                android:id="@+id/CommentCount"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_weight="1"
                android:background="@null"
                android:drawableTop="@drawable/item_comment_selector"
                android:text="@string/text_num"
                android:textColor="@color/bg_White" />

            <Button
                android:id="@+id/share"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_weight="1"
                android:background="@null"
                android:drawableTop="@drawable/item_share_seletor"
                android:text="@string/share"
                android:textColor="@color/bg_White" />
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>