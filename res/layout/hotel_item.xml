<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/detail_bg"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/hotel_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/imageView1"
        android:text="酒店名:速八酒店"
        android:textColor="@color/tv_Black" />

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/hotel_name"
        android:layout_below="@+id/hotel_name"
        android:layout_marginTop="17dp"
        android:text="酒店简介:速8酒店属于经济型酒店品牌。 速8国际是全球最大的经济型酒店连锁，从1974年发展到现在，全球共有2100多家速8酒店。"
        android:textColor="@color/tv_Black" />

    <ImageView
        android:id="@+id/imageView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/hotel_name"
        android:background="@drawable/suba_hotel" />

</RelativeLayout>