<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <ImageView
        android:id="@+id/poll_gridview"
        android:layout_width="90dip"
        android:layout_height="90dip"
        android:background="@drawable/icon_travel"
        android:contentDescription="@string/app_name" />

    <RadioButton
        android:id="@+id/poll_gridview_item"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/iv_gridview"
        android:layout_marginLeft="5dp"
        android:gravity="center"
        android:text="图一"
        android:textColor="#7f7f7f" />

    <TextView
        android:id="@+id/poll_optionName"
        android:layout_width="90dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/iv_gridview"
        android:layout_marginLeft="5dp"
        android:gravity="center"
        android:paddingBottom="3dp"
        android:paddingTop="3dp"
        android:text="图一"
        android:textColor="#7f7f7f"
        android:visibility="gone" />

    <RelativeLayout
        android:id="@+id/poll_progress"
        android:layout_width="90dp"
        android:layout_height="wrap_content"
        android:layout_above="@+id/rb_gridview"
        android:layout_alignBottom="@+id/iv_gridview"
        android:layout_alignLeft="@+id/iv_gridview"
        android:background="#595959"
        android:visibility="gone" >

        <ProgressBar
            android:id="@+id/progressBar1"
            style="@style/StyleProgressBarTransparent"
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:background="@drawable/image_poll"
            android:progress="10" />

        <ImageView
            android:id="@+id/polled"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="14dp"
            android:background="@drawable/yueyuebbs_tp_good" />

        <TextView
            android:id="@+id/currentNum"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="3dp"
            android:layout_toRightOf="@+id/polled"
            android:text="100"
            android:textColor="#fff"
            android:textSize="7sp" />

        <TextView
            android:id="@+id/currentPercent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="5dp"
            android:text="(10%)"
            android:textColor="#fff"
            android:textSize="7sp" />
    </RelativeLayout>

</RelativeLayout>