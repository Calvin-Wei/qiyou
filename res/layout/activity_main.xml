<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/llayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:orientation="vertical" >

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <LinearLayout
                android:id="@+id/guanggao"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" >

                <com.qiyou.ggl.view.MyPagerGalleryView
                    android:id="@+id/adgallery"
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:background="#FFFFFF"
                    android:focusable="true"
                    android:focusableInTouchMode="true" />
            </LinearLayout>

            <TextView
                android:id="@+id/adgallerytxt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/guanggao"
                android:background="@drawable/viewpager_bottom_bg"
                android:text="广告" />

            <LinearLayout
                android:id="@+id/ovalLayout"
                android:layout_width="match_parent"
                android:layout_height="10dp"
                android:layout_below="@+id/guanggao"
                android:background="#00FFFFFF"
                android:gravity="center"
                android:orientation="horizontal" >
            </LinearLayout>
        </RelativeLayout>
    </ScrollView>

</LinearLayout>